pipeline {
  agent any
  environment {
      PATH = "/var/lib/jenkins/aws:$PATH"
  }
  stages {
    stage('Zip up lambda') {
        steps {
                sh 'zip "lambda5${BUILD_NUMBER}.zip" "lambda_function.py" "requirements.txt"'
            }
        }     
         stage("Upload"){
        steps{
               script {
                dir(''){
                pwd();
                def identity=awsIdentity(); 
                withAWS(region: "us-east-1", credentials:"awscr") {
                    s3Upload(bucket:"fairifinal", workingDir:'',includePathPattern:'**/*.zip')
                                                                  }    
              }
                }
                }
                }
        stage('Submit Stack') {
            steps {
                    script {
                     sh 'aws cloudformation create-stack --stack-name lambda --template-body file://lambda.json --region 'us-east-1''
              }
             }
             }
        stage('remove the pushed zip folder') {
     steps {
            sh 'rm -rf lambda5${BUILD_NUMBER}.zip'
          }
       }
    }
 }
