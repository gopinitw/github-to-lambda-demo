pipeline {
  agent any
  environment {
      PATH = "/var/lib/jenkins/aws:$PATH"
  }
  stages {
    stage('Zip up lambda') {
        steps {
                sh '''
                zip "lambda_function.zip" "lambda_function.py"
                '''
            }
        }
  
        stage('remove the pushed zip folder') {
     steps {
            sh 'aws s3 rm s3://fairi10 --recursive'
            sh 'rm -rf *.zip'
          }
       }
    }
    }
