pipeline {
  agent any
  environment {
      PATH = "/var/lib/jenkins/aws:$PATH"
      OPERATION = "create"
  }
  stages {
    stage('Zip up lambda') {
        steps {
                sh 'zip "lambdag.zip" "lambda_function.py"'
            }
        }     
         stage("Upload"){
        steps{
               script { 
                withAWS(region: "us-east-1", credentials:"awscr") {
                    s3Upload(bucket:"lambafairi", workingDir:'',includePathPattern:'**/*.zip')
                    sh 'aws s3 cp "lambda.json" "s3://lambdafairi2/" --recursive'
                                                                  }    
              }
                }
                }
        stage('cloud formation stack creation to launch lambda function') {
            steps {
                    script {
                     withAWS(region: "us-east-1", credentials:"awscr") {
                     sh 'aws cloudformation create-stack --stack-name "bhadra" --template-url "https://test-jenkins-lambda-template.s3.amazonaws.com/fairi_lambdas.yaml"  --region "${REGION_NAME}" --capabilities CAPABILITY_AUTO_EXPAND CAPABILITY_IAM CAPABILITY_NAMED_IAM'
              }
              }
             }
             }
        stage('remove the pushed zip folder') {
     steps {
            sh 'rm -rf *.zip'
          }
       }
    }
    }
