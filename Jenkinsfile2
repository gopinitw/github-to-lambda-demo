pipeline {
  agent any
  environment {
      PATH = "/var/lib/jenkins/aws:$PATH"
      OPERATION = "create"
  }
  stages {
    stage('Zip up lambda') {
        steps {
                sh 'zip "lambdag.zip" "lambda.py"'
            }
        }     
         stage("Upload"){
        steps{
               script { 
                withAWS(region: "us-east-1", credentials:"awscr") {
                    s3Upload(bucket:"lambafairi", workingDir:'',includePathPattern:'**/*.zip')
                                                                  }    
              }
                }
                }
        stage('cloud formation stack creation to launch lambda function') {
            steps {
                    script {
                     withAWS(region: "us-east-1", credentials:"awscr") {
                     sh 'aws cloudformation update-stack --stack-name lambdanew --template-body file://lambda.json'
              }
              }
             }
             }
        stage('remove the pushed zip folder') {
     steps {
            sh 'rm -rf *.zip'
          }
       }
    }
    }
